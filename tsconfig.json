{
    "compilerOptions": {
      "target": "ES2020",                
      "module": "ES2020",                
      "moduleResolution": "node",        
      "declaration": true,               
      "declarationMap": true,            
      "outDir": "dist",                  
      "rootDir": "src",                  
      "strict": true,                    
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "include": ["src", "src/.test.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }
  